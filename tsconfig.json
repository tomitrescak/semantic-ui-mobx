{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": ["src/typings/overrides", "node_modules/@types"],
    "types": ["react"],
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-snapshots-plugin"
      }
    ]
  },
  "exclude": ["node_modules"]
}
